<div class="wrapper-login text-center">
    <div class="logo">
    </div>
    <div class="mt-4 name fs-4 text-center">
        Login
    </div>
    <form class="p-3 mt-3" action="/authorization/signin" method="POST"
        id="form-login">
        <div class="form-group">
            <input type="text" class="form-control m-3" id="username"
                placeholder="Username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control m-3"
                id="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <div class="fs-6 text-black mt-3 text-center">
        <span>Dont have an account? </span><a class="fw-bold"
            href="/authorization/signup">Sign up</a>
    </div>
</div>
{{> footer }}
{{> script }}
